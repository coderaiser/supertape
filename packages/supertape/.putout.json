{
    "rules": {
        "nodejs/declare": ["on", {
            "dismiss": ["setTimeout"]
        }]
    },
    "match": {
        "*.md": {
            "remove-unreachable-code": "off"
        },
        "test/errors.ts": {
            "tape/remove-only": "off",
            "tape/remove-skip": "off"
        },
        "*.js": {
            "nodejs/convert-esm-to-commonjs": "on"
        }
    },
    "ignore": ["test"]
}
