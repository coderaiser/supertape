{
    "rules": {
        "nodejs/declare": ["on", {
            "dismiss": ["setTimeout"]
        }]
    },
    "match": {
        "*.md": {
            "remove-unreachable-code": "off"
        },
        "test/errors.ts": {
            "tape/remove-only": "off",
            "tape/remove-skip": "off"
        },
        "*.spec.*": {
            "tape/remove-skip": ["on", {
                "exclude": ["test.skip(__identifier, __identifier, __c)"]
            }],
            "tape/remove-only": ["on", {
                "exclude": ["test.only(__identifier, __identifier)"]
            }]
        }
    },
    "ignore": ["test"]
}
